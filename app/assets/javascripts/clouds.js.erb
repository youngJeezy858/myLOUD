$(document).ready(function () {
    var pngPath = $('#refresh_all_instances').data('png');
    var gifPath = $('#refresh_all_instances').data('gif');
    $(document)
        .ajaxStart(function() {
            $('#refresh_all').attr("src", gifPath);
        })
        .ajaxStop(function() {
            $('#refresh_all').attr("src", pngPath);
        });

    setTimeout(cont_refresh_all, 60000);
});

function refresh_all() {
    var href = $('#refresh_all_instances').attr('href');	
    $('#all_instances').load(href);
}


function cont_refresh_all() {
    refresh_all();
    setTimeout(cont_refresh_all, 60000);
}
