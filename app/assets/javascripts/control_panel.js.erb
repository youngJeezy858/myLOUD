$(document).ready(function () {
   var pngPath = $('#refresh_instances').data('png');
   var gifPath = $('#refresh_instances').data('gif');
   $(document)
	.ajaxStart(function() {
	    $('#refresh').attr("src", gifPath);
	})
	.ajaxStop(function() {
	    $('#refresh').attr("src", pngPath);
	});
    
    setTimeout(refreshDatPartial, 60000);
});


function refreshPartial() {
    var href = $('#refresh_instances').attr('href');
    $('.instances').load(href);
}


function refreshDatPartial() {
    refreshPartial();
    setTimeout(refreshDatPartial, 60000);
}