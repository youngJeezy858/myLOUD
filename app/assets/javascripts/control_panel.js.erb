$(document).ready(function () {
   $(document)
	.ajaxStart(function() {
	    $('#refresh_instances').html('<%= image_tag("refresh.gif", size: "25x25", id: "refresh") %>');
	})
	.ajaxStop(function() {
	    $('#refresh_instances').html('<%= image_tag("refresh.png", size: "25x25", id: "refresh") %>');
	});
    
    setTimeout(refreshDatPartial, 60000);
});


function refreshPartial() {
    var href = $('#refresh_instances').attr('href');
    $('.instances').load(href);
}


function refreshDatPartial() {
    refreshPartial();
    setTimeout(refreshDatPartial, 60000);
}