<%= form_for @account, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :minutes, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :minutes, :min => 0 %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :instance_limit, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :instance_limit, :class => 'number_field' %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                @account, :class => 'btn' %>
  </div>
<% end %>
