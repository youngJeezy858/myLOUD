<div class="page-header">
  <h1>Admin Tools: AMI's</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Image ID</th>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    <% @amis.each do |ami| %>
    <tr>
      <td><%= link_to ami.imageId, ami %></td>
      <td><%= ami.name %></td>
      <td><%= link_to t('.edit', :default => t("Edit")),
	edit_ami_path(ami), :class => 'btn btn-mini' %></td>
      <td>
	<%= link_to t('.destroy', :default => t("Destroy")),
        ami, :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
        :class => 'btn btn-mini btn-danger' %>
      </td>
    </tr>
    <tr>
      <td><b>Description:</b></td>
      <td><%= ami.description %></td>
      <td></td>
      <td></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New AMI", new_ami_path, :class => 'btn btn-primary' %>
<%= link_to "Back", page_path('admin'), :class => 'btn' %>
