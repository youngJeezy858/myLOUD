<div class="page-header">
  <h1><%= @ami.name %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Image ID:</strong></dt>
  <dd><%= @ami.imageId %>&nbsp;</dd>
  <dt><strong>Instance size:</strong></dt>
  <dd><%= @ami.size %></dd>
  <dt><strong>Description:</strong></dt>
  <dd><%= @ami.description %>&nbsp;</dd>
  <dt><strong>State:</strong></dt>
  <dd><%= get_ami_status @ami.imageId %>&nbsp;</dd>
</dl>


<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
  amis_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
  edit_ami_path(@ami), :class => 'btn' %>
  <%= link_to "Delete", @ami, method: 'delete', class: 'btn btn-danger' %>
</div>
